@page "/Operador/Index"
@using Microsoft.AspNetCore.Components.Web
@using ProjetoBlazor.Models
@using ProjetoBlazor.Data
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<DataBaseContext> DbFactory

<PageTitle>Operadores</PageTitle>

<h3>Lista de Operadores</h3>

@if (operadores == null)
{
    <div class="alert alert-info">Carregando dados do banco...</div>
}
else if (!operadores.Any())
{
    <div class="alert alert-warning">Nenhum operador encontrado no banco PROJETOVB.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Status</th>
                <th>Perfil</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in operadores)
            {
                <tr>
                    <td>@item.Codigo</td>
                    <td>@item.Nome</td>
                    <td>
                        <span class="badge @(item.Inativo == 1 ? "bg-danger" : "bg-success")">
                            @(item.Inativo == 1 ? "Inativo" : "Ativo")
                        </span>
                    </td>
                    <td>@(item.Admin == 1 ? "Administrador" : "Operador")</td>
                    <td>
                        <button class="btn btn-sm btn-primary">Editar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Operador>? operadores;

    // Este método roda assim que o componente é carregado
    protected override async Task OnInitializedAsync()
    {
        // Criamos uma instância temporária do contexto para esta consulta
        using var context = DbFactory.CreateDbContext();

        // Buscamos a lista de operadores de forma assíncrona
        operadores = await context.Operador.ToListAsync();
    }
}
