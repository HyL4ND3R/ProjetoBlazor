@page "/Operador/Index"
@rendermode InteractiveServer

<PageTitle>Operadores</PageTitle>

<div class="container-fluid">
    <h3>Operadores</h3>

    <div class="card mb-3">
        <div class="card-body">
            <div class="input-group">
                <span class="input-group-text">Filtrar por nome:</span>
                <input type="text" class="form-control" @bind="filtroNome" @bind:event="oninput" placeholder="Digite para buscar..." />
                <button class="btn btn-outline-secondary" @onclick="LimparFiltro">Limpar</button>
            </div>
        </div>
    </div>

    <div class="mb-3 d-flex gap-2">
        <button class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Novo
        </button>

        <button class="btn btn-primary" disabled="@(operadorSelecionado == null)" @onclick="EditarSelecionado">
            <i class="bi bi-pencil"></i> Alterar
        </button>

        <button class="btn btn-danger" disabled="@(operadorSelecionado == null)" @onclick="ExcluirSelecionado">
            <i class="bi bi-trash"></i> Excluir
        </button>
    </div>

    @if (operadores == null)
    {
        <div class="alert alert-info">Carregando dados...</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover border">
                <thead class="table-dark">
                    <tr>
                        <th>Código</th>
                        <th>Nome</th>
                        <th>Status</th>
                        <th>Perfil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in OperadoresFiltrados)
                    {
                        <tr @onclick="() => SelecionarLinha(item)"
                            style="cursor: pointer;"
                            class="@(operadorSelecionado?.Codigo == item.Codigo ? "table-primary" : "")">
                            <td>@item.Codigo</td>
                            <td>@item.Nome</td>
                            <td>
                                <span class="badge @(item.Inativo == 1 ? "bg-danger" : "bg-success")">
                                    @(item.Inativo == 1 ? "Inativo" : "Ativo")
                                </span>
                            </td>
                            <td>@(item.Admin == 1 ? "Admin" : "Operador")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<Operador>? operadores;
    private Operador? operadorSelecionado;
    private string filtroNome = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var result = await SessionStorage.GetAsync<string>("OperadorLogado");
            if (!result.Success || string.IsNullOrEmpty(result.Value))
            {
                Nav.NavigateTo("/Login");
            }
        }
    }

    // Lógica do Filtro: sempre que o filtro muda, a lista filtrada se ajusta
    private IEnumerable<Operador> OperadoresFiltrados =>
        operadores?.Where(x => string.IsNullOrWhiteSpace(filtroNome) ||
        x.Nome.Contains(filtroNome, StringComparison.OrdinalIgnoreCase) ||
        x.Codigo.ToString().Contains(filtroNome, StringComparison.OrdinalIgnoreCase))

        ?? Enumerable.Empty<Operador>();

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        operadores = await context.Operador.ToListAsync();
    }

    private void SelecionarLinha(Operador op)
    {
        // Se clicar no que já está selecionado, desmarca
        if (operadorSelecionado?.Codigo == op.Codigo)
            operadorSelecionado = null;
        else
            operadorSelecionado = op;
    }

    private void LimparFiltro() => filtroNome = "";

    private void EditarSelecionado()
    {
        if (operadorSelecionado != null)
        {
            // Lógica para abrir tela de edição

        }
    }

    private async void ExcluirSelecionado()
    {
        if (operadorSelecionado != null)
        {
            // 1. Pergunta ao usuário usando o confirm do navegador
            bool confirmado = await JS.InvokeAsync<bool>("confirm", "Confirma Exclusão ?");

            if (confirmado)
            {
                try
                {
                    using var context = DbFactory.CreateDbContext();

                    // 2. Remove do banco de dados
                    context.Operador.Remove(operadorSelecionado);
                    await context.SaveChangesAsync();

                    // 3. Atualiza a lista na tela para refletir a exclusão
                    operadores?.Remove(operadorSelecionado);
                    operadorSelecionado = null; // Limpa a seleção

                    // Opcional: Feedback visual
                    await JS.InvokeVoidAsync("alert", "Operador excluído com sucesso!");

                    StateHasChanged();
                }
                catch (Exception ex)
                {
                    await JS.InvokeVoidAsync("alert", "Erro ao excluir: " + ex.Message);
                }
            }
        }
    }
}